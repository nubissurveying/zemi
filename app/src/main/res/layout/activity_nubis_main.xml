<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NubisWhite"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NubisMain" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/infoMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Welcome to Nubis Touchstone"
            android:textColor="@color/NubisBlue"
            android:textSize="18sp" />

        <Button
            android:id="@+id/mainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:background="@drawable/nubis_buttons"
            android:padding="12dp"
            android:text="Record your Cortisol measure"
            android:textColor="@color/NubisWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/volumeInternetView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/NubisRed"
                android:padding="5dp"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/NubisWhite"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/messageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/NubisGreen"
                android:padding="5dp"
                android:text="No messages"
                android:textColor="@color/NubisWhite"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/batteryView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/NubisBluePressed"
                android:padding="5dp"
                android:textColor="@color/NubisWhite"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>