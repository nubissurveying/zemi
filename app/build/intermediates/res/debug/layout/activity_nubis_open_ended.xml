<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/NubisWhite"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NubisOpenEnded" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/infoMainQuestion"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Tell me what got you stressed and irritated?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/NubisBlue" />

        <EditText
            android:id="@+id/openEndedText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="3"
            android:minLines="3" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/openEndedTakePictureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@drawable/nubis_buttons"
                android:paddingBottom="4dp"
                android:paddingLeft="2dp"
                android:paddingTop="5dp"
                android:src="@android:drawable/ic_menu_camera" />

            <ImageButton
                android:id="@+id/openEndedRecordSoundPictureButton"
                style="android:buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@drawable/nubis_buttons"
                android:contentDescription="@color/NubisWhite"
                android:paddingBottom="4dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="5dp"
                android:src="@android:drawable/ic_btn_speak_now"
                android:tag="@drawable/nubis_buttons" />

            <Button
                android:id="@+id/saveOpenEndedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/nubis_buttons"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="Save response"
                android:textColor="@color/NubisWhite" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout><!-- From: file:/home/basweerman/StudioProjects/NubisZemi/app/src/main/res/layout/activity_nubis_open_ended.xml -->