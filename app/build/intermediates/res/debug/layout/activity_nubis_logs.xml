<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NubisWhite"
    android:gravity="fill_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NubisLogs" >

    <TextView
        android:id="@+id/infoView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="29"
        android:minHeight="290dp"
        android:minWidth="300dp"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:textColor="@color/NubisBlack" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/infoView"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/updateSettingsButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/nubis_buttons"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:text="Update"
            android:textColor="@color/NubisWhite" />

        <Button
            android:id="@+id/closeSettingsButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/nubis_buttons"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:text="Close"
            android:textColor="@color/NubisWhite" />

    </LinearLayout>

</RelativeLayout><!-- From: file:/home/basweerman/StudioProjects/NubisZemi/app/src/main/res/layout/activity_nubis_logs.xml -->